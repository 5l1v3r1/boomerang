FLOAT %f2to3[64]   -> 65 COVERS %f2..%f3;
FLOAT %f4to5[64]   -> 66 COVERS %f4..%f5;
FLOAT %f6to7[64]   -> 67 COVERS %f6..%f7;
FLOAT %f8to9[64]   -> 68 COVERS %f8..%f9;
FLOAT %f10to11[64] -> 69 COVERS %f10..%f11;
